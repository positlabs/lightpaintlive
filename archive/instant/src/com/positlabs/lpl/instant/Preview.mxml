<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 addedToStage="setup()">
	
	<fx:Script>
		<![CDATA[
			protected function setup():void{
				camera.addChild(WebCam.video);
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="off"/>
		<s:State name="on"/>
	</s:states>
	
	<s:SpriteVisualElement id="camera" visible="false"/>
	<s:Button id="previewBtn" width="40" height="30" 
			  fontWeight="bold" fontSize="20"
			  scaleX="{1/scaleX}" scaleY="{1/scaleY}"
			  label.off="+" click.off="camera.visible = true; currentState = 'on'"
			  label.on="-" click.on="camera.visible = false; currentState = 'off'"
			  toolTip="enter key to show/hide" 
			  focusEnabled="false"/>
	
</s:Group>
