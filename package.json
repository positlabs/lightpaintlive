{
  "name": "lightpaintlive",
  "version": "1.0.0",
  "description": "lightpaintlive",
  "scripts": {
    "serve": "firebase serve --only hosting,functions",
    "deploy:prod": "npm run build && firebase deploy --only hosting:prod,functions:prod,database:prod",
    "deploy:dev": "npm run build && firebase deploy --only hosting:dev,functions:dev,database:dev",
    "watch": "webpack --watch --mode development",
    "build": "webpack --mode production",
    "localtunnel": "pm2 start ./dev/localtunnel.sh -- lightpaintlive 5000"
  },
  "dependencies": {
    "firebase": "^5.5.8",
    "jquery": "^2.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/positlabs/lightpaintlive.git"
  },
  "bugs": {
    "url": "https://github.com/positlabs/lightpaintlive/issues"
  },
  "homepage": "https://github.com/positlabs/lightpaintlive",
  "devDependencies": {
    "@polymer/lit-element": "^0.6.3",
    "css-loader": "^1.0.1",
    "glob": "^7.1.3",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.10.0",
    "pug-html-loader": "^1.1.5",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  }
}
